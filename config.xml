<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jstr.readmap" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LectorMap</name>
    <description>
        Aplicacion para mostar rutas y capturar medidores
    </description>
    <author email="joys.tower@gmail.com" href="http://cordova.io">
        Angel Joyce Torres Ramirez
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-navigation href="http://*/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-network-information" spec="~1.3.1" />
    <plugin name="cordova-plugin-file" spec="~4.3.1" />
    <plugin name="cordova-plugin-background-mode" spec="~0.6.5" />
    <preference name="StatusBarBackgroundColor" value="#0277bd" />

    <platform name="android">
       <icon src="res/Icon-ldpi.png" density="ldpi" />
       <icon src="res/Icon-mdpi.png" density="mdpi" />
       <icon src="res/Icon-hdpi.png" density="hdpi" />
       <icon src="res/Icon-xhdpi.png" density="xhdpi" />
       <icon src="res/Icon-xxhdpi.png" density="xxhdpi" />
       <icon src="res/Icon-xxxhdpi.png" density="xxxhdpi" />
    </platform>
</widget>
